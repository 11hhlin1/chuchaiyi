<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_20p"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30p"
            android:textColor="@color/black"
            android:gravity="left|top"
            android:text="@string/travel_reason"
            android:textSize="@dimen/textsize_13sp"/>
        <EditText
            android:id="@+id/trip_reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20p"
            android:background="@null"
            android:gravity="left"
            android:paddingTop="@dimen/margin_20p"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_15sp"
            android:textColorHint="@color/color_aaaaaa"
            android:hint="必填"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <View
        style="@style/horizontal_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30p"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:text="@string/trip_city"
            android:textSize="@dimen/textsize_13sp"/>
        <EditText
            android:id="@+id/trip_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20p"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_15sp"
            android:textColorHint="@color/color_aaaaaa"
            android:hint="如 北京 深圳"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <View
        style="@style/horizontal_line"/>
    <RelativeLayout
        android:id="@+id/choose_start_date_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/start_date"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_13sp" />

        <TextView
            android:id="@+id/start_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:drawablePadding="8dp"
            android:text="@string/must_choose"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_12sp"
            android:drawableRight="@mipmap/icon_enter" />
    </RelativeLayout>
    <View
        style="@style/horizontal_line"/>
    <RelativeLayout
        android:id="@+id/choose_end_date_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/end_date"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_13sp" />

        <TextView
            android:id="@+id/end_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:drawablePadding="8dp"
            android:text="@string/must_choose"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_12sp"
            android:drawableRight="@mipmap/icon_enter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_30p"
        android:layout_height="30dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_30p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_12sp"
            android:text="出差人"/>
        <TextView
            android:id="@+id/add_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_flight_addpersonal"
            android:drawablePadding="3dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_30p"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_12sp"
            android:text="@string/add"/>

    </RelativeLayout>
    <View
        style="@style/horizontal_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_ll"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_line_height_132px"
        android:layout_marginTop="@dimen/margin_40p"
        android:layout_marginLeft="@dimen/margin_30p"
        android:layout_marginRight="@dimen/margin_30p"
        android:textSize="@dimen/textsize_18sp"
        android:textColor="@color/white"
        android:text="@string/dialog_default_confirm_title"
        android:background="@drawable/selector_common_btn"/>
</LinearLayout>