<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_30p"
        android:textSize="@dimen/textsize_14sp"
        android:textColor="@color/color_222222" />
    <TextView
        android:id="@+id/passenger_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_13sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_20p"
        android:layout_toRightOf="@+id/passenger_name"
        android:textColor="@color/color_222222"/>

    <View
        style="@style/personal_page_bottom_line"/>
</RelativeLayout>