<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_30p"
    android:paddingLeft="@dimen/margin_30p"
    android:paddingRight="@dimen/margin_20p">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_state_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_20p"
        android:background="@drawable/hot_city_bg"
        android:padding="@dimen/margin_20p">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_person"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/textsize_15sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_person_job"
                android:layout_toRightOf="@+id/check_person"
                android:textSize="@dimen/textsize_14sp"
                android:layout_marginLeft="@dimen/margin_20p"
                android:textColor="@color/color_aaaaaa" />
            <TextView
                android:id="@+id/check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize_14sp"
                android:textColor="@color/color_aaaaaa"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/check_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14sp"
            android:textColor="@color/color_80c41c"
            android:text="发起申请"/>
    </LinearLayout>
</LinearLayout>