<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40p"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_flight_sucess"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20p"
            android:paddingBottom="@dimen/margin_40p"
            android:gravity="center"
            android:text="@string/book_success_tip"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_13sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40p"
        android:padding="@dimen/margin_30p"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/textsize_16sp"/>
            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_222222"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/textsize_14sp"/>
            <TextView
                android:id="@+id/passenger_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_222222"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/textsize_14sp"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        style="@style/horizontal_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <Button
            android:id="@+id/back_index_btn"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_rect_blue"
            android:text="继续预订"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13sp"
            android:layout_marginLeft="@dimen/margin_30p"/>
        <Button
            android:id="@+id/back_order_btn"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_rect_blue"
            android:text="查看订单"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13sp"
            android:layout_marginRight="@dimen/margin_30p"/>
    </RelativeLayout>

</LinearLayout>