<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40p"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_flight_sucess"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20p"
            android:paddingBottom="@dimen/margin_40p"
            android:gravity="center"
            android:text="您的密码已修改成功"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/textsize_13sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <Button
        android:id="@+id/back_login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_line_height_132px"
        android:layout_marginTop="@dimen/margin_40p"
        android:layout_marginLeft="@dimen/margin_30p"
        android:layout_marginRight="@dimen/margin_30p"
        android:textSize="@dimen/textsize_18sp"
        android:textColor="@color/white"
        android:text="现在就去登录"
        android:background="@drawable/selector_common_btn"/>
</LinearLayout>