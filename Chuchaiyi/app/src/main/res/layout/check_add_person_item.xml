<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:minHeight="44dp"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/delete_passenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_flight_delpersonal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_30p"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_222222"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10p"
            android:id="@+id/passenger_name"
            android:textSize="@dimen/textsize_15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_aaaaaa"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10p"
        android:id="@+id/passenger_job"
        android:textSize="@dimen/textsize_12sp"/>
    <View
        style="@style/horizontal_line"/>
</LinearLayout>