<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plane_type"
        android:text="经济舱"
        android:paddingLeft="@dimen/margin_30p"
        android:textColor="@color/color_222222"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textsize_16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discount"
        android:text="9.5折"
        android:layout_marginLeft="6dp"
        android:textColor="@color/color_222222"
        android:layout_toRightOf="@+id/plane_type"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textsize_14sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_btn"
        android:padding="8dp"
        android:text="@string/book"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/color_0071c4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_30p"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textsize_14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/book_btn"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_money"
            android:text="2400"
            android:textColor="@color/orange"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_16sp"/>
        <TextView
            android:id="@+id/remainNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:text="4张"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/textsize_14sp"/>
    </LinearLayout>
<View
    style="@style/personal_page_bottom_line"/>
</RelativeLayout>