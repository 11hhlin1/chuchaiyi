<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/personal_item"
    android:layout_height="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_0071c4"
        android:textSize="@dimen/textsize_12sp"
        android:text="@string/all_seat"
        android:layout_centerInParent="true"
        android:id="@+id/hide_tv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_detail_blue_down"
        android:layout_toRightOf="@+id/hide_tv"
        android:layout_marginLeft="6dp"
        android:id="@+id/hide_iv"/>
</RelativeLayout>