<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Splash" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="white_bg_dialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/progress_img_popbg</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="vertical_line">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>

    <!-- 首页 -->
    <style name="titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/color_0071c4</item>
    </style>
    <style name="title_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="main_RadioButton_style" parent="@style/main_Red_RadioButton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_Red_RadioButton_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textsize_10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">@dimen/tab_margin</item>
        <item name="android:paddingTop">@dimen/tab_margin</item>
        <item name="android:textColor">@color/main_text_color_selector</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- 施工进度页面 -->
    <style name="RadioButton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/personal_small_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/main_text_color_selector</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:drawablePadding">@dimen/margin_24px</item>
    </style>

    <style name="personal_page_top_line" parent="@style/horizontal_line">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="personal_page_bottom_line" parent="@style/horizontal_line">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- 登录页面 -->
    <style name="login_edittext">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">@dimen/margin_40p</item>
        <item name="android:textSize">@dimen/textsize_15sp</item>
        <item name="android:textColorHint">@color/color_aaaaaa</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="plan_raw_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_detail_disable</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="raw_Button" parent="@style/plan_raw_Button">
        <item name="android:layout_marginRight">@dimen/margin_24px</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_window_show</item>
        <item name="android:windowExitAnimation">@anim/popup_window_dismiss</item>
    </style>
    <style name="calendar_week_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/color_aaaaaa</item>
        <item name="android:textSize">@dimen/textsize_12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_tv_gray_16sp">
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:textColor">@color/secondary_gray</item>
    </style>
    <!-- 空白页 -->
    <style name="empty_tv" parent="@style/main_tv_gray_16sp">
        <item name="android:id">@id/empty_tv</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/margin_30px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/empty_no_data</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>
    <!-- 空白页 -->
    <style name="error_tv" parent="@style/empty_tv">
        <item name="android:id">@id/error_tv</item>
        <item name="android:text">@string/load_fail_click_reload</item>
        <item name="android:drawableTop">@mipmap/ic_launcher</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>

    <style name="TreeNodeStyleDivided">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>
</resources>
